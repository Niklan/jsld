<?php

/**
 * @file
 * Main file for hooks.
 */

use Drupal\Core\Entity\Display\EntityViewDisplayInterface;
use Drupal\Core\Entity\EntityInterface;
use Drupal\jsld\Hook\Entity\EntityView;
use Drupal\jsld\Hook\Theme\HtmlPreprocess;

/**
 * Implements hook_entity_view().
 */
function jsld_entity_view(array &$build, EntityInterface $entity, EntityViewDisplayInterface $display, string $view_mode): void {
  \Drupal::classResolver(EntityView::class)($build, $entity, $display, $view_mode);
}

/**
 * Implements hook_preprocess_HOOK() for html.
 */
function jsld_preprocess_html(array &$variables): void {
  \Drupal::classResolver(HtmlPreprocess::class)($variables);
}
